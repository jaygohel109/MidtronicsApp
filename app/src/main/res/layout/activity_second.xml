<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2E1"
    android:padding="16dp"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/My_profile_Picture" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jay Gohel"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewProfile" />

    <TextView
        android:id="@+id/textViewBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Brief biography goes here... Explore the professional life, achievements and other interesting facts."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />

    <TableLayout
        android:id="@+id/tableEducation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/table_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewBio">

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Degree"
            android:background="@drawable/cell_background"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Field"
            android:background="@drawable/cell_background"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Institute"
            android:background="@drawable/cell_background"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Year"
            android:background="@drawable/cell_background"
            android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="Masters"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="Computer Science"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="Illinois Tech"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="2025"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="B.Tech"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="Computer Engineering"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="GTU"/>
        <TextView
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/cell_background"
            android:text="2022"/>
    </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnFirstActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#DBA979"
        android:text="Back to Country List"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
